@model BL.AccountModels.ActivationModel

@{
    ViewBag.Title = "Активация профиля";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Активация профиля</h3>
        <hr />
        Для активации профиля "@Html.DisplayFor(model => model.Login)" нажмите "Активировать".
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.LastName)
        @Html.HiddenFor(model => model.FirstName)
        @Html.HiddenFor(model => model.MidleName)
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.Login)
        @Html.HiddenFor(model => model.Password)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Активировать" class="btn btn-default" />
            </div>
        </div>
    </div>
}